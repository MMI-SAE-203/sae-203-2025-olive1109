--- 
import ImgPb from './ImgPb.astro';
const { ...film } = Astro.props;
---

<div class="w-120 h-auto flex flex-colun align-center justify-center bg-white border border-gray-200 rounded-lg shadow-md overflow-hidden">
    <!-- Image Section -->
    <div class="relative group align-middle">
        <a href={`/film/${film.id}`}>
            <ImgPb 
                record={film} 
                field="image" 
                alt={film.imgAlt || 'Affiche du film'} 
                classPicture="w-1/4 h-48 object-cover rounded-lg"  
                classImg="w-50 m-20 ml-0 group-hover:grayscale-0 group-hover:mix-blend-normal"
            />
        </a>
    </div>
    <!-- Content Section -->
    <div class="w-60 p-4 space-y-4">
        <!-- Film Title -->
        <h3 class="text-xl font-semibold text-gray-900 m-0">{film.titre}</h3>
        
        <!-- Film Seance Date -->
        <p class="text-sm text-gray-500 mb-2">ðŸ“… {new Date(film.Seance).toLocaleDateString()}</p>
        
        <!-- Film Synopsis -->
        <div class="text-gray-700 line-clamp-2" set:html={film.synopsis}></div>
    </div>
</div>